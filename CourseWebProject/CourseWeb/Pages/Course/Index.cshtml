@page
@model CourseWeb.Pages.Course.IndexModel

@{
    ViewData["Title"] = "Index";
     Layout = "../Shared/_Layout.cshtml";
}

<section id="top-sell" class="padding-medium">
    <div class="container">

        <div class="text-center mb-5">
